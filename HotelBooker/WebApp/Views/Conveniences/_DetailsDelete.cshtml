@model BLL.App.DTO.Convenience

<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    @if (Model.Description != null)
    {
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    }
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.ConvenienceGroup)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.ConvenienceGroup!.Name)
    </dd>
</dl>