@model IEnumerable<BLL.App.DTO.Review>

@{
    ViewData["Title"] = "Reviews";
}

<h1>All reviews</h1>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Heading)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hotel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.Heading)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User!.DisplayName)
            </td>
            <td>
                @if (User.IsInRole("admin"))
                {
                    <div class="btn-group">
                        <a asp-action="Edit" class="btn btn-outline-info" asp-route-id="@item.Id">Edit</a>
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
                    </div>
                }
            </td>
        </tr>
    }
    </tbody>
</table>