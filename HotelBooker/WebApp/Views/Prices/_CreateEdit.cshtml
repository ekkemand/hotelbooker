@model HotelBooker.ViewModels.PricesCreateEditVM

<div class="form-group">
    <label asp-for="Price.Value" class="control-label"></label>
    <input asp-for="Price.Value" class="form-control" />
    <span asp-validation-for="Price.Value" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price.CurrencyId" class="control-label"></label>
    <select asp-for="Price.CurrencyId" class ="form-control" asp-items="Model.CurrencySelectList"></select>
</div>
<div class="form-group">
    <label asp-for="NewCurrency" class="control-label"></label>
    <input asp-for="NewCurrency" class="form-control" />
    <span asp-validation-for="NewCurrency" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Price.CampaignId" class="control-label"></label>
    <select asp-for="Price.CampaignId" class ="form-control" asp-items="Model.CampaignSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Price.ProductId" class="control-label"></label>
    <select asp-for="Price.ProductId" class ="form-control" asp-items="Model.ProductSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Price.HotelId" class="control-label"></label>
    <select asp-for="Price.HotelId" class ="form-control" asp-items="Model.HotelSelectList"></select>
</div>