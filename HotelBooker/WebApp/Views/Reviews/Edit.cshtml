@model HotelBooker.ViewModels.ReviewsCreateEditVM
@{
    ViewData["Title"] = "Edit your review";
}

<h1>Edit review</h1>

<h4>@Model.Review.Heading</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Review.Id"/>

            <partial name="_CreateEdit"/>

            <div class="form-group">
                <input hidden="hidden" asp-for="Review.HotelId"/>
                <input hidden="hidden" asp-for="Review.RoomTypeId"/>
                <input hidden="hidden" asp-for="Review.UserId"/>
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}