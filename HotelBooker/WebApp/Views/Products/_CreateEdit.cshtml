@model HotelBooker.ViewModels.ProductsCreateEditVM

<div class="form-group">
    <label asp-for="Product.Name" class="control-label"></label>
    <input asp-for="Product.Name" class="form-control" />
    <span asp-validation-for="Product.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Product.Description" class="control-label"></label>
    <input asp-for="Product.Description" class="form-control" />
    <span asp-validation-for="Product.Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Product.ProductGroupId" class="control-label"></label>
    <select asp-for="Product.ProductGroupId" class ="form-control" asp-items="Model.ProductGroupSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Product.RoomTypeId" class="control-label"></label>
    <select asp-for="Product.RoomTypeId" class ="form-control" asp-items="Model.RoomTypeSelectList"></select>
</div>