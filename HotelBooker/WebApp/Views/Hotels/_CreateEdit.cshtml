@model HotelBooker.ViewModels.HotelEntityVM

<div class="form-group">
    <label asp-for="Hotel.Name" class="control-label"></label>
    <input asp-for="Hotel.Name" class="form-control" />
    <span asp-validation-for="Hotel.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Hotel.Rating" class="control-label"></label>
    <input asp-for="Hotel.Rating" class="form-control" />
    <span asp-validation-for="Hotel.Rating" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Hotel.Address" class="control-label"></label>
    <input asp-for="Hotel.Address" class="form-control" />
    <span asp-validation-for="Hotel.Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Hotel.Established" class="control-label"></label>
    <input asp-for="Hotel.Established" class="form-control" />
    <span asp-validation-for="Hotel.Established" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Hotel.OwnerCompanyId" class="control-label"></label>
    <select asp-for="Hotel.OwnerCompanyId" class ="form-control" asp-items="Model.OwnerCompanySelectList"></select>
</div>

<div class="form-group">
    <label asp-for="Hotel.Website" class="control-label"></label>
    <input asp-for="Hotel.Website" class="form-control" />
    <span asp-validation-for="Hotel.Website" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Hotel.ImageUrl" class="control-label"></label>
    <input asp-for="Hotel.ImageUrl" class="form-control" />
    <span asp-validation-for="Hotel.ImageUrl" class="text-danger"></span>
</div>