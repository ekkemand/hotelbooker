@model IEnumerable<BLL.App.DTO.Campaign>

@{
    ViewData["Title"] = "Campaigns";
}

<h1>Campaigns</h1>

<p>
    @if (User.IsInRole("admin"))
    {
        <a asp-action="Create">Add New</a>
    }
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiscountFactor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountFactor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
    @if (User.IsInRole("admin"))
    {
        <div class="btn-group">
            <a asp-action="Edit" class="btn btn-outline-info" asp-route-id="@item.Id">Edit</a>
            <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
        </div>
    }
</td>
        </tr>
    }
    </tbody>
</table>